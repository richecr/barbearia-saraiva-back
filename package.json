{
    "name": "barbearia-saraiva-back",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/richecr/barbearia-saraiva-back",
    "author": "Evlav Tech",
    "private": true,
    "scripts": {
        "dev": "nodemon -r tsconfig-paths/register src/index.ts",
        "build": "yarn clean && tsc",
        "start": "node dist/index.js",
        "migrate": "yarn sequelize db:migrate --env development",
        "migrate:undo": "yarn sequelize db:migrate:undo --env development",
        "migrate:undo:all": "yarn sequelize db:migrate:undo:all --env development",
        "seed": "yarn sequelize db:seed:all --env development",
        "seed:undo:all": "yarn sequelize db:seed:undo:all --env development",
        "clean": "rm -rf dist",
        "generate": "yarn plop --plopfile generators/plopfile.js",
        "migrate:test": "yarn sequelize db:migrate --env test",
        "migrate:undo:all:test": "yarn sequelize db:migrate:undo:all --env test",
        "test:unit": "yarn migrate:test && jest --detectOpenHandles && yarn migrate:undo:all:test"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.9",
        "@types/express": "^4.17.8",
        "@types/jest": "^26.0.20",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mocha": "^9.0.0",
        "@types/sequelize": "^4.28.9",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/parser": "^5.8.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.21.2",
        "jest": "^26.6.3",
        "nodemon": "^2.0.15",
        "plop": "^2.7.4",
        "sequelize-cli": "^6.2.0",
        "supertest": "^6.1.3",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "bcrypt": "^5.0.1",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import-helpers": "^1.1.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.4.1",
        "pg-hstore": "^2.3.3",
        "sequelize": "^6.3.5",
        "yup": "^0.32.8"
    }
}
